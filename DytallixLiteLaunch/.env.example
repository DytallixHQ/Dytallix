# DytallixLiteLaunch Environment Configuration
# Copy this file to .env and configure your values

# Network Configuration
CHAIN_ID=dytallix-testnet-1
NETWORK_NAME=dytallix-testnet
GENESIS_TIME=2024-09-29T14:00:00.000000000Z

# Token Configuration
DGT_DENOM=udgt
DRT_DENOM=udrt
TREASURY_ADDRESS=dytallix1treasury1234567890123456789012345678

# Node Configuration
NODE_RPC_HOST=0.0.0.0
NODE_RPC_PORT=26657
NODE_P2P_PORT=26656
NODE_REST_PORT=1317
NODE_WS_PORT=26658

# Database
DB_PATH=/tmp/dytallix_db

# Services Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
FAUCET_PORT=8787
FAUCET_HOST=0.0.0.0
EXPLORER_PORT=3000
EXPLORER_HOST=0.0.0.0
FRONTEND_PORT=3001
FRONTEND_HOST=0.0.0.0

# API Endpoints
NODE_RPC_URL=http://localhost:26657
NODE_REST_URL=http://localhost:1317
SERVER_URL=http://localhost:8080
FAUCET_URL=http://localhost:8787

# Faucet Configuration
FAUCET_PRIVATE_KEY=your_faucet_private_key_here
FAUCET_DGT_AMOUNT=1000000
FAUCET_DRT_AMOUNT=500000
FAUCET_RATE_LIMIT_PER_IP=10
FAUCET_RATE_LIMIT_WINDOW_MS=900000

# Governance
GOVERNANCE_MIN_DEPOSIT=10000000
GOVERNANCE_VOTING_PERIOD=604800
GOVERNANCE_DEPOSIT_PERIOD=172800

# Staking & Rewards
STAKING_MIN_SELF_DELEGATION=1000000
BLOCK_REWARD_DRT=100000
STAKING_REWARD_RATE=0.05

# AI Oracle Configuration
AI_ORACLE_ENDPOINT=http://localhost:8080/oracle
AI_ORACLE_API_KEY=your_ai_oracle_key_here
OPENAI_API_KEY=your_openai_key_here

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3002
LOG_LEVEL=info

# Docker Configuration
COMPOSE_PROJECT_NAME=dytallix-lite

# Development Flags
ENABLE_CORS=true
ENABLE_TELEMETRY=true
ENABLE_METRICS=true
ENABLE_DEBUG_LOGS=false

# PQC Configuration
PQC_ENABLED=true
PQC_ALGORITHM=dilithium3

# Cross-Origin Resource Sharing
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Security
JWT_SECRET=your_jwt_secret_here_change_this_in_production
API_RATE_LIMIT=100
API_RATE_WINDOW_MS=900000