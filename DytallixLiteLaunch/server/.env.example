# Dytallix Server Configuration

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
NODE_ENV=development

# Chain Configuration
CHAIN_ID=dytallix-testnet-1
NODE_RPC_URL=http://localhost:26657
NODE_REST_URL=http://localhost:1317

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8787

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW_MS=900000

# AI Oracle Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_DEFAULT_MODEL=gpt-4
AI_MAX_TOKENS=150
AI_TIMEOUT_MS=30000

# Oracle Rewards
ORACLE_REWARD_TOKEN=DRT
ORACLE_BASE_REWARD=10000
ORACLE_QUALITY_MULTIPLIER_MIN=0.5
ORACLE_QUALITY_MULTIPLIER_MAX=2.0

# Metrics Configuration
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true
METRICS_INTERVAL_MS=5000

# Tokenomics
DRT_INFLATION_RATE=0.05
BLOCKS_PER_YEAR=5256000
TARGET_BLOCK_TIME=6

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/server.log

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
API_KEY_HEADER=X-API-Key
RATE_LIMIT_SKIP_SUCCESS=true

# External Services
FAUCET_URL=http://localhost:8787
FRONTEND_URL=http://localhost:3001
EXPLORER_URL=http://localhost:3000

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000