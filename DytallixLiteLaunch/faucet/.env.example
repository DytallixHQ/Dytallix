# Dytallix Faucet Configuration

# Server Settings
FAUCET_HOST=0.0.0.0
FAUCET_PORT=8787
NODE_ENV=development

# Chain Configuration  
CHAIN_ID=dytallix-testnet-1
NODE_RPC_URL=http://localhost:26657
NODE_REST_URL=http://localhost:1317

# Faucet Wallet Configuration
FAUCET_PRIVATE_KEY=your_faucet_private_key_here
FAUCET_ADDRESS=dytallix1faucet1234567890123456789012345678901
FAUCET_MNEMONIC=your_faucet_mnemonic_phrase_here

# Token Amounts (in micro-denominations)
FAUCET_DGT_AMOUNT=1000000
FAUCET_DRT_AMOUNT=500000
MAX_DGT_PER_REQUEST=10000000
MAX_DRT_PER_REQUEST=5000000

# Rate Limiting
RATE_LIMIT_PER_IP=10
RATE_LIMIT_WINDOW_HOURS=1
COOLDOWN_SECONDS=3600
MAX_REQUESTS_PER_DAY=50

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Security
CAPTCHA_ENABLED=false
CAPTCHA_SITE_KEY=your_captcha_site_key_here
CAPTCHA_SECRET_KEY=your_captcha_secret_key_here
IP_WHITELIST=
IP_BLACKLIST=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/faucet.log

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PROMETHEUS_PORT=9091

# Redis Configuration (optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database (for request history)
DB_ENABLED=false
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dytallix_faucet
DB_USER=faucet
DB_PASSWORD=your_db_password_here

# External Services
BLOCKCHAIN_EXPLORER_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Development/Testing
MOCK_MODE=false
SIMULATE_BLOCKCHAIN=true
TEST_ADDRESSES=dytallix1test123456789012345678901234567890

# Gas Configuration
GAS_LIMIT=200000
GAS_PRICE=0.025udgt
TX_TIMEOUT_MS=30000

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Faucet is temporarily unavailable for maintenance