# Dytallix Node Configuration

# Chain Configuration
DYTALLIX_CHAIN_ID=dytallix-testnet-1
DYTALLIX_MONIKER=dytallix-testnet-validator
DYTALLIX_DATA_DIR=/var/lib/dytallix/data

# Network Ports  
DYTALLIX_RPC_PORT=26657
DYTALLIX_P2P_PORT=26656
DYTALLIX_REST_PORT=1317
DYTALLIX_GRPC_PORT=9090
DYTALLIX_WS_PORT=26658
DYTALLIX_METRICS_PORT=9464

# Block Production
DYTALLIX_BLOCK_INTERVAL_MS=6000
DYTALLIX_EMPTY_BLOCKS=true
DYTALLIX_MAX_TXS_PER_BLOCK=1000

# Consensus
DYTALLIX_TIMEOUT_PROPOSE=3s
DYTALLIX_TIMEOUT_PREVOTE=1s
DYTALLIX_TIMEOUT_PRECOMMIT=1s
DYTALLIX_TIMEOUT_COMMIT=5s

# Governance
DYTALLIX_ENABLE_GOVERNANCE=true
DYTALLIX_GOV_MIN_DEPOSIT=10000000
DYTALLIX_GOV_DEPOSIT_PERIOD=172800
DYTALLIX_GOV_VOTING_PERIOD=604800

# Staking  
DYTALLIX_ENABLE_STAKING=true
DYTALLIX_STAKING_REWARD_RATE_BPS=500
DYTALLIX_MIN_SELF_DELEGATION=1000000

# Monitoring
DYTALLIX_METRICS=1
DYTALLIX_PROMETHEUS=true
DYTALLIX_METRICS_ADDR=0.0.0.0:9464

# Logging
DYTALLIX_LOG_LEVEL=info
DYTALLIX_LOG_FORMAT=json

# Storage
DYTALLIX_DB_BACKEND=goleveldb
DYTALLIX_PRUNING=default
DYTALLIX_STATE_SYNC_ENABLE=false

# API Configuration
DYTALLIX_API_ENABLE=true
DYTALLIX_API_SWAGGER=true
DYTALLIX_API_ADDRESS=tcp://0.0.0.0:1317
DYTALLIX_GRPC_ENABLE=true
DYTALLIX_GRPC_ADDRESS=0.0.0.0:9090

# P2P Configuration
DYTALLIX_P2P_SEEDS=
DYTALLIX_P2P_PERSISTENT_PEERS=
DYTALLIX_P2P_MAX_NUM_INBOUND_PEERS=40
DYTALLIX_P2P_MAX_NUM_OUTBOUND_PEERS=10

# Security
DYTALLIX_P2P_PEX=true
DYTALLIX_P2P_PRIVATE_PEER_IDS=
DYTALLIX_P2P_ADDR_BOOK_STRICT=true

# State Sync (for joining existing network)
DYTALLIX_STATE_SYNC_RPC_SERVERS=
DYTALLIX_STATE_SYNC_TRUST_HEIGHT=0
DYTALLIX_STATE_SYNC_TRUST_HASH=