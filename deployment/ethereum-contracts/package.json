{
  "name": "dytallix-bridge-contracts",
  "version": "1.0.0",
  "description": "Dytallix Bridge Smart Contracts for Ethereum",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:sepolia": "hardhat run scripts/deploy-sepolia.js --network sepolia",
    "deploy:sepolia:complete": "hardhat run scripts/deploy-bridge-complete.js --network sepolia",
    "verify:deployment": "hardhat run scripts/verify-deployment.js --network sepolia",
    "configure:bridge": "hardhat run scripts/configure-bridge.js --network sepolia",
    "update:integration": "node scripts/update-integration-files.js",
    "deploy:mainnet": "hardhat run scripts/deploy-mainnet.js --network mainnet",
    "verify:sepolia": "hardhat verify --network sepolia",
    "node": "hardhat node"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.0",
    "hardhat": "^2.17.0",
    "ethers": "^6.7.0",
    "dotenv": "^16.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.9.0"
  }
}
