# Ethereum Sepolia Testnet Configuration
# Copy this file to .env and fill in your actual values

# RPC URL for Sepolia testnet
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Private key for deployment wallet (without 0x prefix)
PRIVATE_KEY=your_private_key_without_0x_prefix

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# Bridge configuration
BRIDGE_ADMIN=0xYourAdminAddress
VALIDATOR_THRESHOLD=3
BRIDGE_FEE_BPS=10

# Validator addresses (comma-separated)
VALIDATORS=0xvalidator1,0xvalidator2,0xvalidator3

# Optional: Gas price settings
GAS_PRICE=20000000000
GAS_LIMIT=6000000
