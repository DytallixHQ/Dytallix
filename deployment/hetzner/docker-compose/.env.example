# Hetzner Cloud Server Configuration
# Copy this file to .env and update the values

# Domain Configuration
DOMAIN_NAME=testnet.dytallix.com
EXTERNAL_IP=your-server-ip-here
ACME_EMAIL=admin@dytallix.com

# Security Configuration
FAUCET_MNEMONIC="your faucet mnemonic phrase here"
GRAFANA_ADMIN_PASSWORD=secure_grafana_password_here
REDIS_PASSWORD=secure_redis_password_here
POSTGRES_PASSWORD=secure_postgres_password_here

# Node Configuration
CHAIN_ID=dytallix-testnet-1
MONIKER=dytallix-hetzner-node

# Optional: Custom ports if needed
# P2P_PORT=26656
# RPC_PORT=26657
# REST_PORT=1317
# GRPC_PORT=9090

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Performance Configuration
ENABLE_PROMETHEUS=true
ENABLE_GRAFANA=true
ENABLE_LOKI=true
