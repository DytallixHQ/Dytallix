# Cosmos Osmosis Testnet Configuration
# Copy this file to .env and fill in your actual values

# Mnemonic phrase for deployment wallet (12 or 24 words)
MNEMONIC="your twelve word mnemonic phrase for deployment wallet"

# Osmosis testnet RPC endpoint
OSMOSIS_TESTNET_RPC=https://rpc.osmotest5.osmosis.zone

# Alternative Osmosis testnet RPC endpoints
# OSMOSIS_TESTNET_RPC=https://osmosis-testnet-rpc.polkachu.com
# OSMOSIS_TESTNET_RPC=https://rpc-test.osmosis.zone

# Bridge configuration
VALIDATOR_THRESHOLD=3
BRIDGE_FEE_BPS=10

# Validator addresses (comma-separated)
VALIDATORS=osmo1validator1,osmo1validator2,osmo1validator3

# Optional: Gas settings
GAS_PRICE=0.025
GAS_ADJUSTMENT=1.5
GAS_LIMIT=300000

# Contract configuration
BRIDGE_CODE_ID=1
WRAPPED_TOKEN_CODE_ID=2
