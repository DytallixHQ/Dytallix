{
  "dashboard": {
    "id": null,
    "uid": "validators-dashboard",
    "title": "Dytallix Validators",
    "tags": ["dytallix", "validators", "consensus"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Validator Voting Power",
        "type": "timeseries",
        "targets": [
          {
            "expr": "dyt_validator_voting_power",
            "legendFormat": "{{validator}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Missed Blocks by Validator",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(dyt_validator_missed_blocks_total[5m])",
            "legendFormat": "{{validator}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 3,
        "title": "Blocks Produced by Validator",
        "type": "timeseries", 
        "targets": [
          {
            "expr": "rate(dyt_blocks_produced_total[5m])",
            "legendFormat": "{{validator}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 4,
        "title": "Validator Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"dyt-validator\"}",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {"steps": [{"color": "red", "value": 0}, {"color": "green", "value": 1}]},
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 5,
        "title": "Total Missed Blocks",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(dyt_validator_missed_blocks_total)",
            "legendFormat": "Total Missed"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {"steps": [{"color": "green", "value": null}, {"color": "yellow", "value": 10}, {"color": "red", "value": 50}]}
          }
        }
      },
      {
        "id": 6,
        "title": "Total Blocks Produced",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(dyt_blocks_produced_total)",
            "legendFormat": "Total Produced"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {"steps": [{"color": "green", "value": null}]}
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}