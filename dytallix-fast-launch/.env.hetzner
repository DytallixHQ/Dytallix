# Hetzner Production Environment Configuration
# Copy to .env for production deployment

# =====================
# Frontend (using VITE_* naming for build-time availability)
# =====================
REACT_APP_API_BASE_URL=https://api.dytallix.com
REACT_APP_DEV_MODE=false
REACT_APP_NODE_URL=https://rpc.dytallix.com
REACT_APP_EXPLORER_URL=https://explorer.dytallix.com

# =====================
# Runtime Environment
# =====================
NODE_ENV=production
PORT=8787
ALLOWED_ORIGIN=https://app.dytallix.com

# =====================
# Cosmos Chain Configuration
# =====================
VITE_LCD_HTTP_URL=https://lcd.dytallix.com
VITE_RPC_HTTP_URL=https://rpc.dytallix.com
VITE_RPC_WS_URL=wss://rpc.dytallix.com/websocket
VITE_CHAIN_ID=dytallix-mainnet
CHAIN_PREFIX=dytallix
RPC_HTTP_URL=https://rpc.dytallix.com

# =====================
# API and Faucet Configuration
# =====================
VITE_API_URL=https://api.dytallix.com/api
VITE_FAUCET_URL=https://api.dytallix.com/api/faucet

# =====================
# QuantumVault API Configuration (Hetzner)
# =====================
VITE_QUANTUMVAULT_API_URL=https://quantumvault.dytallix.com
BLOCKCHAIN_API_URL=https://rpc.dytallix.com

# =====================
# Hetzner Cloud Configuration
# =====================
# Server locations: Nuremberg, Helsinki, Falkenstein, Ashburn
# Instance types: cx11, cx21, cx31, cx41, cx51
HETZNER_REGION=nbg1
HETZNER_INSTANCE_TYPE=cx21

# =====================
# SSL/TLS Configuration
# =====================
SSL_CERT_PATH=/etc/letsencrypt/live/dytallix.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/dytallix.com/privkey.pem
ENABLE_HTTPS=true

# =====================
# Database Configuration (Production)
# =====================
DATABASE_URL=postgresql://dytallix:password@localhost/dytallix_production
REDIS_URL=redis://localhost:6379

# =====================
# Security Configuration
# =====================
ENABLE_SEC_HEADERS=1
ENABLE_CSP=1
CORS_ORIGINS=https://app.dytallix.com,https://explorer.dytallix.com

# =====================
# Monitoring & Logging
# =====================
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# =====================
# Rate Limiting
# =====================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =====================
# Faucet Configuration (Production)
# =====================
FAUCET_GAS_PRICE=0.025uDRT
FAUCET_MAX_PER_REQUEST_DGT=1
FAUCET_MAX_PER_REQUEST_DRT=25
FAUCET_COOLDOWN_MINUTES=120

# =====================
# Node Configuration (Production)
# =====================
DYT_BLOCK_INTERVAL_MS=15000
DYT_EMPTY_BLOCKS=false
BLOCK_MAX_TX=1000
DYT_WS_ENABLED=true
DYT_DATA_DIR=/var/lib/dytallix/data
DYT_CHAIN_ID=dytallix-mainnet-1
RUNTIME_MOCKS=false

# =====================
# Governance Parameters (Production)
# =====================
GOV_QUORUM=0.40
GOV_THRESHOLD=0.51
GOV_VETO=0.334
GOV_PROPOSAL_DEPOSIT=10000000
GOV_MIN_VOTE_DURATION=86400
GOV_MAX_VOTE_DURATION=604800
GOV_VETO_THRESHOLD=0.334

# =====================
# Backup Configuration
# =====================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=dytallix-backups

# =====================
# Service Discovery
# =====================
SERVICE_REGISTRY_URL=consul://localhost:8500
HEALTH_CHECK_INTERVAL=30

# =====================
# Load Balancer Configuration
# =====================
LOAD_BALANCER_ENABLED=true
UPSTREAM_SERVERS=server1.dytallix.com:3030,server2.dytallix.com:3030

# =====================
# Notes for Hetzner Deployment
# =====================
# 1. Use Hetzner Load Balancer for high availability
# 2. Set up Hetzner Volumes for persistent storage
# 3. Configure Hetzner Firewall rules
# 4. Use Hetzner DNS for domain management
# 5. Enable Hetzner Backup snapshots
# 6. Consider using Hetzner Object Storage for file uploads
