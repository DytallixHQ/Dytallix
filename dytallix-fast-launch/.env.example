# =====================
# Frontend (using VITE_* naming for build-time availability)
# =====================
REACT_APP_API_BASE_URL=https://api.dytallix.com
REACT_APP_DEV_MODE=false
REACT_APP_NODE_URL=https://rpc.dytallix.com
REACT_APP_EXPLORER_URL=https://explorer.dytallix.com

# =====================
# Runtime Environment
# =====================
NODE_ENV=production
PORT=8787
ALLOWED_ORIGIN=https://app.dytallix.com

# =====================
# Cosmos Chain Configuration
# =====================
VITE_LCD_HTTP_URL=https://lcd.dytallix.com
VITE_RPC_HTTP_URL=https://rpc.dytallix.com
VITE_RPC_WS_URL=wss://rpc.dytallix.com/websocket
VITE_CHAIN_ID=dytallix-mainnet
CHAIN_PREFIX=dytallix
RPC_HTTP_URL=https://rpc.dytallix.com

# =====================
# API and Faucet Configuration (new unified pattern)
# =====================
VITE_API_URL=https://api.dytallix.com/api
# VITE_FAUCET_URL=https://api.dytallix.com/api/faucet  # Optional explicit override

# =====================
# Faucet Signer (DO NOT USE production mnemonics in dev/test)
# =====================
# FAUCET_MNEMONIC="your test mnemonic here - NEVER commit real mnemonics"
FAUCET_GAS_PRICE=0.025uDRT
FAUCET_MAX_PER_REQUEST_DGT=2
FAUCET_MAX_PER_REQUEST_DRT=50
FAUCET_COOLDOWN_MINUTES=60

# =====================
# Rate Limiting with Redis (Optional)
# =====================
# DLX_RATE_LIMIT_REDIS_URL=redis://localhost:6379
# Leave unset to use in-memory rate limiting

# =====================
# Security Feature Flags
# =====================
ENABLE_SEC_HEADERS=1
ENABLE_CSP=1

# =====================
# Node Block Producer (Rust devnet)
# =====================
DYT_BLOCK_INTERVAL_MS=2000
DYT_EMPTY_BLOCKS=true
BLOCK_MAX_TX=100
DYT_WS_ENABLED=true
DYT_DATA_DIR=./data
DYT_CHAIN_ID=dytallix-testnet-1
RUNTIME_MOCKS=false

# =====================
# Governance Parameters
# (CLI fallback if flags not provided; maps to dcli --gov.* flags)
# =====================
GOV_QUORUM=0.33
GOV_THRESHOLD=0.50
GOV_VETO=0.334
GOV_PROPOSAL_DEPOSIT=1000000
GOV_MIN_VOTE_DURATION=3600
GOV_MAX_VOTE_DURATION=86400
GOV_VETO_THRESHOLD=0.334

# =====================
# QuantumVault API Configuration
# =====================
VITE_QUANTUMVAULT_API_URL=https://quantumvault.dytallix.com
BLOCKCHAIN_API_URL=https://rpc.dytallix.com

# =====================
# Notes
# - Copy to .env for local development.
# - Never commit real mnemonics or secrets.
# - Prefer VITE_* prefix for variables needed in frontend build.
# =====================
# See web/.env.example for frontend specific WS / API base variables
