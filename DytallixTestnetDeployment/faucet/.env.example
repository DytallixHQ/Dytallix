# Faucet (.env.example)
# If faucet runs as a separate service/container, use this. If merged into server, use server/.env.example.

NODE_ENV=production
PORT=8787
ALLOWED_ORIGIN=https://testnet.dytallix.app

CHAIN_ID=dytallix-testnet-1
CHAIN_PREFIX=dytallix

# RPC endpoint used for signing/sendTokens
RPC_HTTP_URL=http://node:3030

# Faucet account
FAUCET_MNEMONIC=replace with 24-word mnemonic for faucet account
FAUCET_GAS_PRICE=0.025uDRT
FAUCET_MAX_PER_REQUEST_DGT=2
FAUCET_MAX_PER_REQUEST_DRT=50
FAUCET_COOLDOWN_MINUTES=60

# Optional Redis for rate limiting across replicas
DLX_RATE_LIMIT_REDIS_URL=
