# QuantumVault MVP - Example Environment
#
# Local compose uses inline values in infra/docker-compose.yml.
# This file is primarily for Helm/production-style deployments.

# Backend
QV_ENV=prod
QV_HTTP_ADDR=0.0.0.0:8080
QV_DB_DSN=postgres://USER:PASS@HOST:5432/DB?sslmode=require
QV_JWT_ISSUER=quantumvault
QV_JWT_ACCESS_TTL=15m
QV_JWT_REFRESH_TTL=720h
QV_JWT_SECRET=CHANGEME_SUPER_LONG_RANDOM
QV_ADMIN_EMAIL=admin@local
QV_ADMIN_PASSWORD=CHANGEME
QV_VAULT_ADDR=https://vault.example.com
QV_VAULT_TOKEN=CHANGEME
QV_ETH_RPC_URL=https://evm.example.com
QV_ETH_CHAIN_ID=1
QV_ETH_PRIVATE_KEY=0x...
QV_ATTESTATION_CONTRACT_FILE=/contracts/attestation.json
QV_CORS_ORIGIN=https://your-frontend.example.com

# Frontend
NEXT_PUBLIC_API_BASE=https://your-frontend.example.com/api
