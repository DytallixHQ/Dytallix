    {
      "name": "Security Tests",
      "item": [
        {
          "name": "SQL Injection Test",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/balance/'; DROP TABLE users; --",
              "host": ["{{base_url}}"],
              "path": ["balance", "'; DROP TABLE users; --"]
            },
            "description": "Test SQL injection protection"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('SQL injection handled safely', function () {",
                  "    // Should return 400, 404, or error response, not 500",
                  "    pm.expect(pm.response.code).to.not.equal(500);",
                  "});",
                  "",
                  "pm.test('No server error on malicious input', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 400, 404, 422]);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "XSS Protection Test",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"from\": \"<script>alert('xss')</script>\",\n  \"to\": \"dyt1receiver456\",\n  \"amount\": 1000,\n  \"fee\": 100\n}"
            },
            "url": {
              "raw": "{{base_url}}/submit",
              "host": ["{{base_url}}"],
              "path": ["submit"]
            },
            "description": "Test XSS protection in transaction submission"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('XSS payload handled safely', function () {",
                  "    // Should not cause server error",
                  "    pm.expect(pm.response.code).to.not.equal(500);",
                  "});",
                  "",
                  "pm.test('XSS payload sanitized or rejected', function () {",
                  "    const response = pm.response.json();",
                  "    const responseText = JSON.stringify(response);",
                  "    pm.expect(responseText).to.not.include('<script>');",
                  "});"
                ]
              }
            }
          ]
        },
